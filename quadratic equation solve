print("Введите коэффициенты  b и c квадратного уравнения:")
b = float(input("b = "))
c = float(input("c = "))

D = b ** 2 - 4 * c
print("D = " + str(D))
import math
if D > 0:
    x1 = (-b + math.sqrt(D)) / 2
    x2 = (-b - math.sqrt(D)) / 2
    print("x1 = " + str(x1),"\nx2 = " + str (x2))
elif D == 0:
    x = -b / 2
    print("x = " + str(x))
else:
    x1 = complex(-b , math.sqrt(-D)) / 2
    x2 = complex(-b, -math.sqrt(-D)) / 2
    print("x1 = " + str (x1), "\nx2 = " + str(x2))
